<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.linsh.views.preference.ImagePreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:detailHeight="36dp"
        app:detailWidth="36dp"
        app:imageSrc="@mipmap/ic_launcher"
        app:titleText="我的头像"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#3333"/>

    <com.linsh.views.preference.TextPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:detailText="林声鹤"
        app:titleText="我的名字"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#3333"/>

    <com.linsh.views.preference.TogglePreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="开启无敌模式"
        app:toggleOn="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#3333"/>

</LinearLayout>
